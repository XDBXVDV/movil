<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F7F9FB"
    tools:context=".ui.MainActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS Tracker"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="25dp" />

    <!-- Tarjeta de datos de ubicación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layoutDirection="ltr"
        android:dividerPadding="5dp"
        android:showDividers="middle"
        android:clipToOutline="true"
        android:backgroundTint="#FFFFFF"
        android:radius="10dp">

        <TextView
            android:id="@+id/txtLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitud: --"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/txtLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitud: --"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtFirebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firebase: conexion no comprobada"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <!-- Botón principal -->
    <Button
        android:id="@+id/btnUbicacion"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Obtener ubicación"
        android:textAllCaps="false"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:elevation="3dp"
        android:paddingVertical="12dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Texto de estado -->
    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: Esperando acción..."
        android:textColor="#757575"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:gravity="center" />

</LinearLayout>
